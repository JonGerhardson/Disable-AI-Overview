{
  "manifest_version": 3,
  "name": "Toggle AI Overviews",
  "version": "1.3",
  "description": "Click the toolbar icon to enable or disable Google's AI Overviews by appending udm=14 to search queries.",
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "*://*.google.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_title": "Toggle AI Overviews",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  }
}


